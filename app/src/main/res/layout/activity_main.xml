<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b3e0ff"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/nilai1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="Isi Nilai">
    </EditText>
    <EditText
        android:id="@+id/nilai2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:hint="Isi Nilai 2">
    </EditText>
    <Button
        android:id="@+id/btncreate"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="155dp"
        android:layout_marginLeft="130dp"
        android:onClick="addvalue"
        android:text="Create">
    </Button>
    <Button
        android:id="@+id/btnupdate"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="215dp"
        android:layout_marginLeft="130dp"
        android:onClick="updatevalue"
        android:text="update">
    </Button>
    <Button
        android:id="@+id/btnuread"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="130dp"
        android:onClick="readvalue"
        android:text="Read">
    </Button>




</RelativeLayout>